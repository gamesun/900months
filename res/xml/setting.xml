<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="root_screen">

    <PreferenceCategory
            android:title="Brithday">
        <EditTextPreference
                android:key="year"
                android:title="Year"
                android:inputType="date"
                android:defaultValue="1990"/>
        <EditTextPreference
                android:key="month"
                android:title="Month"
                android:inputType="number"
                android:defaultValue="1"/>
    </PreferenceCategory>

</PreferenceScreen>
